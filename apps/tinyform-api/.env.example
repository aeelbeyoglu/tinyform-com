# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email Configuration (Resend)
RESEND_API_KEY=
EMAIL_FROM=noreply@tinyform.com

# OpenAI Configuration (for AI form generation)
OPENAI_API_KEY=

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=

# Redis/Upstash (for rate limiting if not using KV)
