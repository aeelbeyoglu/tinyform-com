# Database Configuration (Neon)
DATABASE_URL=postgresql://username:password@ep-xxx.region.aws.neon.tech/tinyform?sslmode=require
DATABASE_AUTH_TOKEN=

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
